@import 'variables.styl'

.weather
  background-color: #eee;
  border-radius: 2px;
  box-shadow: 0 2px 2px rgba(#000, 10%);
  color: #111;
  margin-top: 20px;
  margin: 0 auto;
  padding: 30px;
  max-width: 600px;

  h2 
    font-size: 36px;
    margin-bottom: 5px;
  
  h3 
    font-size: 24px;
    margin-bottom: 10px;
  
  h4 
    font-size: 20px;
  
  img 
    margin-bottom: 20px;

  button 
    display: block;
    margin: auto;
    background-color: darken($primaryColor, 30%);
    color: #eee;
    border: none;
    font-size: 16px;
    padding: 10px 15px;